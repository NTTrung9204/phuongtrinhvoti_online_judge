<link rel="stylesheet" href="../../css/admin.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<div class="mt-4">
    <h3>Delete User</h3>
    <form method="POST" action="/admin/{{deleteuser._id}}">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" value="{{deleteuser.username}}" id="username" name="username" >
        </div>
        <div class="mb-3">
            <label for="points" class="form-label">Points</label>
            <input type="text" class="form-control" value="{{deleteuser.points}}" id="points" name="points">
        </div>
         <div class="mb-3">
            <label for="position" class="form-label">Position</label>
            <input type="text" class="form-control" value="{{deleteuser.position}}" id="position" name="position">
        </div>
        
        <button type="submit" class="btn btn-primary">Delete</button>
    </form>
</div>