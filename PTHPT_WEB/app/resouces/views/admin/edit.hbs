<link rel="stylesheet" href="../../css/admin.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<div class="mt-4">
    <h3>Repair User</h3>
    <form method="POST" action="/admin/{{repairuser._id}}?_method=PUT">
        <div class="mb-3">
            <label for="username" class="form-label">Repair username</label>
            <input type="text" class="form-control" value="{{repairuser.username}}" id="username" name="username" >
        </div>
        <div class="mb-3">
            <label for="score" class="form-label">Repair score</label>
            <input type="text" class="form-control" value="{{repairuser.score}}" id="score" name="points">
        </div>
         <div class="mb-3">
            <label for="position" class="form-label">Repair position</label>
            <input type="text" class="form-control" value="{{repairuser.position}}" id="position" name="position">
        </div>
         <div class="mb-3">
            <label for="goldenMedal" class="form-label">Repair goldenMedal</label>
            <input type="text" class="form-control" value="{{repairuser.goldenMedal}}" id="goldenMedal" name="goldenMedal">
        </div>
         <div class="mb-3">
            <label for="silverMedal" class="form-label">Repair silverMedal</label>
            <input type="text" class="form-control" value="{{repairuser.silverMedal}}" id="silverMedal" name="silverMedal">
        </div>
         <div class="mb-3">
            <label for="bronzeMedal" class="form-label">Repair bronzeMedal</label>
            <input type="text" class="form-control" value="{{repairuser.bronzeMedal}}" id="bronzeMedal" name="bronzeMedal">
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>